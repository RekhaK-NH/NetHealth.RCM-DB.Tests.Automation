{
  "name": "nethealth-rcm-db-tests-automation",
  "version": "1.0.0",
  "description": "NetHealth RCM-DB E2E Test Automation Framework using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression --grep-invert @smoke",
    "test:api": "playwright test --grep @api",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:dev": "cross-env ENV=dev playwright test",
    "test:staging": "cross-env ENV=staging playwright test",
    "test:prod": "cross-env ENV=prod playwright test --grep @prod-safe",
    "test:rcm": "playwright test tests/rcm/",
    "test:rcm:smoke": "playwright test --grep \"@rcm.*@smoke\"",
    "test:rcm:critical": "playwright test --grep \"@rcm.*@critical\"",
    "test:rcm:e2e": "playwright test --grep \"@rcm.*@e2e\"",
    "test:patients": "playwright test --grep @patients",
    "test:revenue": "playwright test --grep @revenue",
    "test:claims": "playwright test --grep @claims",
    "test:performance": "playwright test --grep @performance",
    "test:setup": "playwright test tests/seed.spec.ts",
    "report": "playwright show-report",
    "codegen": "playwright codegen https://basereg.therapy.nethealth.com",
    "install:browsers": "playwright install --with-deps",
    "init:agents": "playwright init-agents --loop=vscode",
    "setup": "npm install && npm run install:browsers"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "automation",
    "nethealth",
    "rcm-db"
  ],
  "author": "NetHealth QE Team",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.9.1",
    "@faker-js/faker": "^9.2.0",
    "typescript": "^5.6.3",
    "ts-node": "^10.9.2",
    "dotenv": "^16.4.5",
    "cross-env": "^7.0.3",
    "allure-playwright": "^3.0.3",
    "allure-commandline": "^2.32.0",
    "date-fns": "^4.1.0"
  }
}
